<div class='slot {{if hidden 'hidden'}}'>
  {{#if count}}
    <span class='hours'>{{timespan}}</span>
    <button class='count {{if (gt slot.commitments.length 0) 'committed-to'}}' onClick={{action setViewingSlot slot}}>{{capacity}}</button>
  {{else}}
    {{#paper-checkbox value=isCommittedTo disabled=disabled indeterminate=toggle.isRunning onChange=(perform toggle)}}
      <span class='hours'>{{timespan}}</span>
    {{/paper-checkbox}}
  {{/if}}
</div>
