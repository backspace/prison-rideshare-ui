{{#paper-data-table sortProp='start' sortDir='desc' as |table|}}
  {{#table.head as |head|}}
    {{#head.column sortProp='start' class='date'}}Date{{/head.column}}
  {{/table.head}}
  {{#table.body as |body|}}
    {{#each (sort-by table.sortDesc model) as |ride|}}
      {{#body.row as |row|}}
        {{#row.cell class='date'}}{{moment-format ride.start 'YYYY-MM-DD'}}{{/row.cell}}
        {{#row.cell class='times'}}{{moment-format ride.start 'h:mma'}} â€” {{moment-format ride.end 'h:mma'}}{{/row.cell}}
        {{#row.cell class='name'}}{{ride.name}}{{/row.cell}}
      {{/body.row}}
    {{/each}}
  {{/table.body}}
{{/paper-data-table}}

{{outlet}}
